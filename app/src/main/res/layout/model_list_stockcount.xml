<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_stockcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/maroon_border"
            android:paddingBottom="8dp">

            <android.support.constraint.Guideline
                android:id="@+id/guideline45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.14" />

            <TextView
                android:id="@+id/kode_stockcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/maroon"
                android:fontFamily="@font/andika_regular"
                android:paddingStart="8dp"
                android:paddingTop="1dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:text="SC0602190001"
                android:textColor="@color/white"
                android:textSize="@dimen/text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tanggal_stockcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/maroon_border"
                android:fontFamily="@font/andika_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="06-01-2020"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/user"
                android:textColor="@color/pickled_bluewood"
                android:textSize="@dimen/text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kode_stockcount" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="@string/last_update"
                android:textColor="@color/pickled_bluewood"
                android:textSize="@dimen/text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

            <TextView
                android:id="@+id/nama_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/andika_regular"
                android:gravity="start"
                android:singleLine="true"
                android:text="0991 - item testwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
                android:textColor="@color/pickled_bluewood"
                android:textSize="@dimen/title_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline45"
                app:layout_constraintTop_toBottomOf="@+id/kode_stockcount" />

            <TextView
                android:id="@+id/last_update_stockcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/andika_regular"
                android:text="06-02-2019 09:39:32"
                android:textColor="@color/pickled_bluewood"
                android:textSize="@dimen/title_text"
                app:layout_constraintStart_toStartOf="@+id/guideline160"
                app:layout_constraintTop_toBottomOf="@+id/textView30" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline160"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26" />

            <Button
                android:id="@+id/buttonDetailByItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ripple_effect_blue"
                android:text="@string/detail_by_item"
                android:textColor="@color/white"
                android:textSize="@dimen/text"
                app:layout_constraintEnd_toStartOf="@+id/guideline177"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/last_update_stockcount" />

            <Button
                android:id="@+id/buttonDetailByLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ripple_effect_yellow"
                android:text="@string/detail_by_label"
                android:textColor="@color/white"
                android:textSize="@dimen/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline177"
                app:layout_constraintTop_toBottomOf="@+id/last_update_stockcount" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline177"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>